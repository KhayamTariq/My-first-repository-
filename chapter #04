    print(f"- {pizza}")


Question #02 ;
# Animals grouped by common characteristics
animals_by_characteristic = {
    "Lay Eggs": ["Chicken", "Duck", "Snake", "Turtle", "Crocodile", "Penguin", "Ostrich"],
    "Mammals": ["Dog", "Cat", "Elephant", "Whale", "Bat", "Dolphin", "Human"],
    "Webbed Feet": ["Duck", "Swan", "Frog", "Otter"]
}

# Print each group
for characteristic, animals in animals_by_characteristic.items():
    print(f"{characteristic}:")
    for animal in animals:
        print(f" - {animal}")
    print()


